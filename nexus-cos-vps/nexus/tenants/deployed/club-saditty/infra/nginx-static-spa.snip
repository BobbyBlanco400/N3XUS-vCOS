# N3XUS COS - SPA Onboarding Snippet
# Usage: ./nexus-cli onboard spa <domain>

echo "Initializing SPA Infrastructure for $1..."

# 1. Generate Config
pf-engine generate nginx-static-spa --domain="$1" > /etc/nginx/sites-available/"$1"

# 2. Link
ln -s /etc/nginx/sites-available/"$1" /etc/nginx/sites-enabled/"$1"

# 3. Verify
nginx -t

# 4. Reload
systemctl reload nginx

echo "âœ… SPA Runtime Active: https://$1"
